<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    tools:context="com.google.healthyhabitsrecommender.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="46dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/walter_turncoat"
                android:text="How it Works"
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="1.) Create an account or log in if you already have one"
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text='2.) Fill out your details on the "Account Details" page and press save. Alternatively, you can press "Connect to Fitbit" and import your data'
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text='3.) Press the "Activity Preferences" button'
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="4.) Type the name of an activity and choose from the popup list, then give each a rating from 3 to 5"
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="5.) You can rate up to 100 predefined activities, five at a time"
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text='6.) Press the "Recommendations" button, then press "Generate Recommendations"'
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="7.) Your recommended activities should now be listed, and you can press on each one to view details"
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/walter_turncoat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text='8.) If you make updates to your activity preferences or account details, you can press "Generate Recommendations" to get a new list of recommendations'
                android:textAlignment="center"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>